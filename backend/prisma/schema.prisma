// ===============================================
// üìò PRISMA SCHEMA - ERP PROFISSIONAL
// ===============================================
//
// üí° Este schema foi projetado para:
// - Alta seguran√ßa (hashes de senha e token)
// - Suporte a multiusu√°rios com permiss√µes e pap√©is
// - Sistema de calend√°rio e tarefas (pessoais e compartilhadas)
// - Auditoria, sess√µes, notifica√ß√µes e tokens de atualiza√ß√£o
// ===============================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ------------------------------------------------------
// üîê USU√ÅRIOS, PAP√âIS E AUTENTICA√á√ÉO
// ------------------------------------------------------

model User {
  id            String           @id @default(cuid())
  name          String
  email         String           @unique
  passwordHash  String           // ‚öôÔ∏è Senha com hash (bcrypt, argon2, etc)
  isMaster      Boolean          @default(false) // üß† Usu√°rio principal ou dono do sistema
  roles         Role[]           @relation("UserRoles") // Rela√ß√£o N:N com Roles
  tasks         UserTask[]                      // Tarefas atribu√≠das a este usu√°rio
  calendars     Calendar[]                      // Calend√°rios criados
  createdTasks  Task[]           @relation("CreatedTasks") // Tarefas criadas por este usu√°rio
  notifications Notification[]   @relation("UserNotifications")
  sessions      Session[]                        // Sess√µes ativas
  refreshTokens RefreshToken[]                   // Tokens de atualiza√ß√£o
  auditLogs     AuditLog[]                       // Hist√≥rico de a√ß√µes

  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
}

// ------------------------------------------------------
// üß© PAP√âIS (ROLES) E PERMISS√ïES
// ------------------------------------------------------
model Role {
  id          String   @id @default(cuid())
  name        String   @unique             // Ex: "ADMIN", "USER", "MANAGER"
  description String?
  active      Boolean  @default(true)
  canAccessDashboard Boolean @default(false)
  users       User[]   @relation("UserRoles") // Rela√ß√£o inversa N:N
}

// ------------------------------------------------------
// üîÅ REFRESH TOKENS (autentica√ß√£o segura com JWT)
// ------------------------------------------------------
model RefreshToken {
  id           String   @id @default(cuid())
  tokenHash    String   // üîê armazenamos s√≥ o hash do token (nunca o valor real)
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  revoked      Boolean  @default(false)
  updatedAt    DateTime @updatedAt
}

// ------------------------------------------------------
// üìÖ CALEND√ÅRIOS E TAREFAS
// ------------------------------------------------------
model Calendar {
  id        String    @id @default(cuid())
  name      String
  ownerId   String
  owner     User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  tasks     Task[]                       // Tarefas vinculadas a este calend√°rio
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Task {
  id          String     @id @default(cuid())
  title       String
  description String?
  date        DateTime
  priority    Priority   @default(MEDIUM)
  color       String     // Exemplo: "#FF0000" ou "bg-red-500"
  
  // üîó Relacionamentos
  calendarId  String
  calendar    Calendar   @relation(fields: [calendarId], references: [id], onDelete: Cascade)
  users       UserTask[]                   // Usu√°rios atribu√≠dos √† tarefa
  notifications Notification[] @relation("TaskNotifications")

  // üë§ Usu√°rio criador (quem criou a tarefa)
  createdById String?
  createdBy   User? @relation("CreatedTasks", fields: [createdById], references: [id], onDelete: SetNull)

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

// ------------------------------------------------------
// üîó RELA√á√ÉO N:N ENTRE USU√ÅRIOS E TAREFAS
// ------------------------------------------------------
model UserTask {
  userId String
  taskId String
  user   User @relation(fields: [userId], references: [id])
  task   Task @relation(fields: [taskId], references: [id])
  @@id([userId, taskId]) // üîí Evita duplica√ß√£o
}

// ------------------------------------------------------
// ‚öôÔ∏è ENUM DE PRIORIDADES DE TAREFAS
// ------------------------------------------------------
enum Priority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

// ------------------------------------------------------
// üîî NOTIFICA√á√ïES (tarefas, eventos, etc)
// ------------------------------------------------------
model Notification {
  id        String   @id @default(cuid())
  userId    String
  taskId    String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation("UserNotifications", fields: [userId], references: [id], onDelete: Cascade)
  task Task @relation("TaskNotifications", fields: [taskId], references: [id], onDelete: Cascade)
}

// ------------------------------------------------------
// üîê SESS√ïES (usu√°rio logado, token ativo, etc)
// ------------------------------------------------------
model Session {
  id          String     @id @default(cuid())
  userId      String
  token       String     @unique
  createdAt   DateTime   @default(now())
  expiresAt   DateTime
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ------------------------------------------------------
// üßæ LOG DE AUDITORIA (registro de a√ß√µes)
// ------------------------------------------------------
model AuditLog {
  id          String     @id @default(cuid())
  userId      String?
  action      String                       // Ex: "CREATE_TASK", "DELETE_USER"
  entity      String?                      // Nome da entidade afetada (User, Task, etc)
  entityId    String?                      // ID da entidade
  timestamp   DateTime   @default(now())
  details     String?                      // JSON ou texto com detalhes extras
  user        User?       @relation(fields: [userId], references: [id], onDelete: SetNull)
}
